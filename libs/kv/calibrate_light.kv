#:import MatplotFigure graph_widget
#:kivy 2.2.1

<CalibrateLight>
    name: 'cal_light'
    figure_wgt3:figure_wgt3

    canvas.before:
        Color:
            rgba: 0.7215, 0.451, 0.2, 1  # First color (in RGBA)
        Rectangle:
            pos: self.pos
            size: self.size
            source: ''

    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            text: "Light Spectrum"
            font_name: './assets/fonts/IMPACT.TTF'
            size_hint_y: .1
            halign: 'center'
        
        MatplotFigure:
            id: figure_wgt3

        MDBoxLayout:
            size_hint_y: 0.2
            spacing: 5
            padding: '10dp'
            
            MDRectangleFlatButton:
                size_hint_x: 0.333
                size_hint_y: None
                text:"Back"
                theme_text_color: "Custom"
                font_name: './assets/fonts/IMPACT.TTF'
                text_color: 0.7215, 0.451, 0.2, 1 #Brown
                line_color: 0.7215, 0.451, 0.2, 1 #Brown
                md_bg_color: 'white'
                on_release:
                    root.disable_clock()
                    app.root.current = 'cal_bg'

            MDRectangleFlatButton:
                id: capture_light
                size_hint_x: 0.333
                size_hint_y: None
                text:"Capture" 
                theme_text_color: "Custom"
                font_name: './assets/fonts/IMPACT.TTF'
                text_color: 0.7215, 0.451, 0.2, 1 #Brown
                line_color: 0.7215, 0.451, 0.2, 1 #Brown
                md_bg_color: 'white'
                on_release:
                    root.disable_clock()
                    root.activate_capture()
            
            MDRectangleFlatButton:
                id: rescan_light
                disabled: True
                size_hint_x: 0.333
                size_hint_y: None
                text:"Rescan" 
                theme_text_color: "Custom"
                font_name: './assets/fonts/IMPACT.TTF'
                text_color: 0.7215, 0.451, 0.2, 1 #Brown
                line_color: 0.7215, 0.451, 0.2, 1 #Brown
                md_bg_color: 'white'
                on_release:
                    root.activate_rescan()
                    root.on_enter()

            MDRectangleFlatButton:
                id: next_light
                disabled: True
                size_hint_x: 0.333
                size_hint_y: None
                text:"Next"
                theme_text_color: "Custom"
                font_name: './assets/fonts/IMPACT.TTF'
                text_color: 0.7215, 0.451, 0.2, 1 #Brown
                line_color: 0.7215, 0.451, 0.2, 1 #Brown
                md_bg_color: 'white'
                on_release:
                    app.root.current = 'scanner'
                                  
        