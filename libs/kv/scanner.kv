#:import MatplotFigure graph_widget
#:kivy 2.2.1

<Scanner>
    name: 'scanner'
    figure_wgt4:figure_wgt4
    id_save:id_save

    canvas.before:
        Color:
            rgba: 0.7215, 0.451, 0.2, 1  # First color (in RGBA)
        Rectangle:
            pos: self.pos
            size: self.size
            source: ''
            
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            text: "Measure NPK"
            font_name: './assets/fonts/IMPACT.TTF'
            size_hint_y: .1
            halign: 'center'

        MatplotFigure:
            id: figure_wgt4

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            padding: "10dp"
            spacing: 5
            halign: 'center'

            MDLabel:
                id: id_save
                text: "0"
                font_name: './assets/fonts/IMPACT.TTF'


        MDBoxLayout:
            size_hint_y: 0.2
            spacing: 5
            padding: '10dp'

            MDRectangleFlatButton:
                size_hint_x: 0.333
                size_hint_y: None
                text:"Home"
                theme_text_color: "Custom"
                font_name: './assets/fonts/IMPACT.TTF'
                text_color: 0.7215, 0.451, 0.2, 1 #Brown
                line_color: 0.7215, 0.451, 0.2, 1 #Brown
                md_bg_color: 'white'
                on_release:
                    root.disable_clock_home()
                    app.root.current = 'lobby'

            MDRectangleFlatButton:
                id: capture_button
                size_hint_x: 0.333
                size_hint_y: None
                disabled: False
                text:"Capture"
                theme_text_color: "Custom"
                font_name: './assets/fonts/IMPACT.TTF'
                text_color: 0.7215, 0.451, 0.2, 1 #Brown
                line_color: 0.7215, 0.451, 0.2, 1 #Brown
                md_bg_color: 'white'
                on_release:
                    root.disable_clock()
                    root.activate_button()

            MDRectangleFlatButton:
                id: rescan_button
                disabled: True
                size_hint_x: 0.333
                size_hint_y: None
                text:"Rescan"
                theme_text_color: "Custom"
                font_name: './assets/fonts/IMPACT.TTF'
                text_color: 0.7215, 0.451, 0.2, 1 #Brown
                line_color: 0.7215, 0.451, 0.2, 1 #Brown
                md_bg_color: 'white'
                on_release:
                    root.activate_button()
                    root.on_enter()
            
            MDRectangleFlatButton:
                id: csv_button
                size_hint_x: 0.333
                size_hint_y: None
                text:"CSV"
                theme_text_color: "Custom"
                font_name: './assets/fonts/IMPACT.TTF'
                text_color: 0.7215, 0.451, 0.2, 1 #Brown
                line_color: 0.7215, 0.451, 0.2, 1 #Brown
                md_bg_color: 'white'
                on_release:
                    root.get_csv()
            
